<style>
  tool-tip{
    width: 800px;
    background-color: silver;
    color: black;
    position: absolute;
    z-index: 1;
    pointer-events: none;
    user-select: none;
    box-shadow: 0 0 10px #000;
    padding: .5rem 1rem;
    font-size: .8rem;
    border-radius: 8px;

    top: 100%;
    left: 1%;

    opacity: 0;
    transition: opacity .2s ease-in-out;

  }
  :has(> tool-tip){
    position: relative;
  }

  :has(> tool-tip):hover > tool-tip{
    opacity: 1;
  }
</style>
